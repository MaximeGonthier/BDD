Creer une base de données sur terminal :
sudo su
mysql
create database xxxxxx;
use xxxxxxx;

Question 1 :

DELETE FROM ACTEUR WHERE ACTEUR.NOM NOT IN ( SELECT J.NOMACTEUR FROM JOUEDANS J);

Question 2 :

UPDATE REALISATEUR SET 	SALAIRE = SALAIRE*1.1 WHERE SALAIRE < 250000;

Requêtes :

R1 : 

SELECT A.NOM, A.DATENAISSANCE FROM ACTEUR A WHERE A.GENRE LIKE "F" ORDER BY A.DATENAISSANCE ASC;

R2 :

SELECT A.NOM FROM ACTEUR A WHERE A.DATENAISSANCE < 19500101 OR A.NOM LIKE " A%";

R3 :

SELECT F.TITRE, F.ANNEE FROM FILM F, REALISATEUR R WHERE F.CERTREA = R.NUMCERT AND R.NOM LIKE "CHAPLIN";

R4 :

SELECT A.NOM 
FROM ACTEUR A, JOUEDANS J, REALISATEUR R, FILM F 
WHERE A.NOM = J.NOMACTEUR 
AND J.TITREFILM = F.TITRE 
AND F.CERTREA = R.NUMCERT 
AND R.NOM LIKE "LYNCH"
AND A.NOM IN (SELECT A.NOM FROM ACTEUR A, JOUEDANS J, REALISATEUR R, FILM F 
WHERE A.NOM = J.NOMACTEUR 
AND J.TITREFILM = F.TITRE 
AND F.CERTREA = R.NUMCERT 
AND R.NOM LIKE "SPIELBERG");

R5 :

SELECT R.NOM 
FROM REALISATEUR R, ACTEUR A 
WHERE R.NOM = A.NOM;

OU

SELECT R.NOM
FROM REALISATEUR R
WHERE R.NOM IN (SELECT A.NOM FROM ACTEUR A);

R6 :

SELECT R.NOM
FROM REALISATEUR R
WHERE R.SALAIRE > (SELECT MIN(F.COUT) FROM FILM F); 

R7 :

SELECT A.NOM
FROM ACTEUR A
WHERE A.NOM IN (SELECT A.NOM
FROM ACTEUR A, REALISATEUR R, FILM F, JOUEDANS J
WHERE A.NOM = J.NOMACTEUR
AND J.TITREFILM = F.TITRE
AND F.CERTREA = R.NUMCERT
AND R.NOM IN (SELECT R.NOM
FROM REALISATEUR R
WHERE R.SALAIRE > (SELECT MIN(F.COUT) FROM FILM F)));

R8 :

SELECT DISTINCT R.NOM
FROM REALISATEUR R, FILM F
WHERE R.NUMCERT = F.CERTREA
AND F.COUT > 10000000
AND R.NOM NOT IN (SELECT R.NOM FROM REALISATEUR R, FILM F WHERE R.NUMCERT = F.CERTREA AND F.COUT < 10000000);

R9 :

SELECT DISTINCT R.NOM
FROM REALISATEUR R, FILM F
WHERE R.NUMCERT = F.CERTREA
AND F.COUT < 1000000
AND R.NOM NOT IN (SELECT R.NOM FROM REALISATEUR R, FILM F WHERE R.NUMCERT = F.CERTREA AND F.COUT > 1000000);

R10 :

SELECT AVG(F.COUT) AS MOYENNE, MAX(F.COUT) AS MAXIMUM
FROM FILM F, REALISATEUR R
WHERE F.CERTREA = R.NUMCERT
GROUP BY R.NOM;

R11 :

SELECT AVG(F.COUT) AS MOYENNE, MAX(F.COUT) AS MAXIMUM
FROM FILM F, REALISATEUR R
WHERE F.CERTREA = R.NUMCERT
AND R.NOM NOT IN (SELECT R.NOM FROM REALISATEUR R, FILM F WHERE R.NUMCERT = F.CERTREA AND F.COUT < 1000000)
GROUP BY R.NOM;

R12 :

SELECT F.TITRE, F.ANNEE
FROM FILM F
WHERE F.DUREE > (SELECT MAX(F.DUREE) FROM FILM F, REALISATEUR R WHERE F.CERTREA = R.NUMCERT AND R.NOM LIKE "CHAPLIN");

R13 :

SELECT F.ANNEE, F.TITRE, A.NOM
FROM FILM F, ACTEUR A, JOUEDANS J
WHERE F.DUREE > 125
AND A.NOM = J.NOMACTEUR
AND F.TITRE = J.TITREFILM
ORDER BY F.TITRE, A.ADRESSE DESC;

R14 :

SELECT F.TITRE, F.ANNEE, F.COUT, A.NOM, COUNT(A.NOM)
FROM FILM F, ACTEUR A, 
WHERE J.TITREFILM = F.TITRE
AND F.COUT > 1000000
AND A.NOM = J.NOMACTEUR;
HAVING COUNT (A.NOM) > 2;

R15 :

SELECT F.TITRE, F.COUT, F.COUT*0.67 AS EURO
FROM FILM F;
